var properties = {
	name: "Turtle",
	author: "E Breakey",
	description: `
	Turtle sim 2016. Kinda slow,
	you can modify this quite easily to make it
	act differently.`,
	version: 1.0
}

function init (){
    //create the turtle object
    this.turtle = {
        x:5,
        y:5,
        state:"up",
        moves: 1,
        max: -1

    }
}

function main (){
    //CREATE LOCAL REFERENCE
    let turtle = this.turtle

    //MOVE
    switch (turtle.state)
    {
        case "up" :
            turtle.y --
            break

        case "down" :
            turtle.y ++
            break

        case "right" :
            turtle.x ++
            break

        case "left" :
            turtle.x --
            break
    }

    //CHANGE STATE
    if (turtle.moves == 0)
    {
        switch (turtle.state)
        {
            case "up" :
                turtle.state = "right"
                break

            case "right" :
                turtle.state = "down"
                break

            case "down" :
                turtle.state = "left"
                break

            case "left" :
                turtle.state = "up"
                break
        }

        turtle.max ++
        turtle.moves = turtle.max
    }
    else
    {
        turtle.moves -= 1
    }

    //CLAMP TO GRID
    turtle.x = clamp(turtle.x, 0, gridSize-1)
    turtle.y = clamp(turtle.y, 0, gridSize-1)

    //TRACE (Green for turtle colours)
    trace(turtle.x, turtle.y, "green");

    //RETURN
    return hex(turtle.x, turtle.y);
}
