function init (){

}

function main (){
	var range = 4
	var x = 0
	var y = 0

    x = rndg()
    y = 5+rnd(range-1)-round((range)/2)+1
    if (turn == PLAYER1)
        return hex(x,y)
    else
        return hex(y,x)
}
