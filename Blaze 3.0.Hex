properties = {
	name: "Blaze",
	author: "Logan",
	description: "Selects the furthest piece connected to the left edge.",
	version: 3.0
}

function init (){
	this.bestX = -1
}

function main (){
	let i, j, moves

	for (j = 0;j < gridSize;j++){
		for (i = 0;i < gridSize;i++){
			if (turn_will_edge(i, j, 'left')){
				if (empty(i, j)){
					if (i > this.bestX){
						this.bestX = i
						return hex(i, j)
					}
				}
			}
		}
	}
	for (j = 0;j < gridSize;j++){
		for (i = 0;i < gridSize;i++){
			if (turn_will_edge(i, j, 'left')){
				if (empty(i, j)){
					if (i >= this.bestX){
						this.bestX = i
						return hex(i, j)
					}
				}
			}
		}
	}
	while (this.bestX >= 0){
		for (j = 0;j < gridSize;j++){
			for (i = 0;i < gridSize;i++){
				if (turn_will_edge(i, j, 'left')){
					if (empty(i, j)){
						if (i >= this.bestX){
							this.bestX = i
							return hex(i, j)
						}
					}
				}
			}
		}
		this.bestX --
	}
	return skip()
}
